@model DALK.PL_ANALYZER.Models.Matches.MatchModelView

<div class="match__notPlayed js-PlayedMatch">
    <div class="match__heading">
        <div class="match__gametitle">@Model.GameTitle</div>
        <div class="match__level">@Model.League @Model.Season, @Model.DateTime</div>
    </div>

    <div class="match__result">
        <div class="match__team match__winner">
            <img class="match__icon" src="@Model.WinnerIconUrl">
            <div class="match__teamname">@Model.Winner</div>
            <div class="match__score">@Model.WinnerPoints</div>
        </div>
        <div class="match__team match__looser">
            <img class="match__icon" src="@Model.LooserIconUrl">
            <div class="match__teamname">@Model.Looser</div>
            <div class="match__score">@Model.LooserPoints</div>
        </div>
    </div>

    <div class="match__description js-matchDesc"><div class="centered_div">@Model.MatchDescription</div></div>
    <div class="match__mvp js-matchMVP"><div class="centered_div">MVP - @Model.MVP</div></div>

    <div class="match__navigation js-matchNav">

        <a href="#" class="match__button">ZOBACZ</a>
        <a href="#" class="match__button">SZCZEGÓŁY</a>
        <a href="#" class="match__button">ANALIZUJ</a>

    </div>
</div>